<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/background_status_bar</item>
        <item name="android:navigationBarColor">@color/background_app</item>
        <item name="android:scrollbarThumbHorizontal">@color/mc_green</item>
        <item name="android:scrollbarThumbVertical">@color/mc_green</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:colorBackground">@color/background_app</item>
        <item name="android:textColorPrimary">@color/mc_text_primary</item>
        <item name="android:textColorSecondary">@color/mc_text_secondary</item>
    </style>

    <style name="CustomDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:scrollbarThumbHorizontal">@color/mc_green</item>
        <item name="android:scrollbarThumbVertical">@color/mc_green</item>
        <item name="android:textColorPrimary">@color/mc_text_primary</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:scrollbarThumbHorizontal">@color/mc_green</item>
        <item name="android:scrollbarThumbVertical">@color/mc_green</item>
        <item name="android:textColorPrimary">@color/mc_text_primary</item>
    </style>

    <style name="RoundedCornersImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4%</item>
    </style>

    <style name="RoundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Minecraft Launcher Style Play Button -->
    <style name="McPlayButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/mc_play_button_background</item>
        <item name="android:textColor">@color/play_button_text</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingVertical">@dimen/_14sdp</item>
        <item name="android:paddingHorizontal">@dimen/_24sdp</item>
    </style>

    <!-- Navigation Item Style -->
    <style name="McNavItem">
        <item name="android:background">@drawable/mc_nav_item_background</item>
        <item name="android:paddingHorizontal">@dimen/_12sdp</item>
        <item name="android:paddingVertical">@dimen/_14sdp</item>
    </style>

    <!-- Card Style -->
    <style name="McCard">
        <item name="android:background">@drawable/mc_card_background</item>
        <item name="android:padding">@dimen/_12sdp</item>
    </style>
</resources>
