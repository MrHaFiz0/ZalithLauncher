<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/mc_surface_elevated"/>
            <stroke android:width="1dp" android:color="@color/mc_green"/>
            <corners android:radius="@dimen/_8sdp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/mc_surface"/>
            <stroke android:width="1dp" android:color="@color/mc_border"/>
            <corners android:radius="@dimen/_8sdp"/>
        </shape>
    </item>
</selector>
