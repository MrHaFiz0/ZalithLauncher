<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/mc_surface_elevated"/>
                    <corners android:radius="@dimen/_6sdp"/>
                </shape>
            </item>
            <item android:width="@dimen/_3sdp" android:gravity="start">
                <shape android:shape="rectangle">
                    <solid android:color="@color/mc_green"/>
                    <corners android:topLeftRadius="@dimen/_6sdp" android:bottomLeftRadius="@dimen/_6sdp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/mc_surface_elevated"/>
            <corners android:radius="@dimen/_6sdp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/mc_surface_elevated"/>
            <corners android:radius="@dimen/_6sdp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="@dimen/_6sdp"/>
        </shape>
    </item>
</selector>
